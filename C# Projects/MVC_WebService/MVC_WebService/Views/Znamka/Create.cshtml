@model MVC_WebService.Models.ZnamkaLocalModel

@{
    ViewBag.Title = "Přidat známku pro žáka " + ViewBag.JmenoZaka;
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm(new { zakId = ViewBag.ZakId, jmenoZaka = ViewBag.JmenoZaka }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Zak)

        


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Predmet, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Predmet, (IEnumerable<SelectListItem>)ViewBag.PredmetySelectList)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Znamka, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Znamka, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Znamka, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Zpět na seznam známek", "List", new { zakId=ViewBag.ZakId, jmenoZaka=ViewBag.JmenoZaka})
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
